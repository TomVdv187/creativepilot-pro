# Application
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/creativepilot

# Redis (for queues and caching)
REDIS_URL=redis://localhost:6379

# OAuth Credentials
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret

GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# AI Services
OPENAI_API_KEY=your_openai_api_key
STABILITY_API_KEY=your_stability_api_key
REPLICATE_API_TOKEN=your_replicate_token

# File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=creativepilot-assets
AWS_REGION=us-east-1

# Authentication
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Monitoring
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_key

# Webhooks
WEBHOOK_SECRET=your_webhook_secret

# Feature Flags
FEATURE_VIDEO_GENERATION=true
FEATURE_C2PA_EXPORT=false
FEATURE_COMPLIANCE_COP=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_GENERATION_PER_HOUR=50

# Model Configuration
PERFORMANCE_MODEL_VERSION=1.0.0
SCORING_CONFIDENCE_THRESHOLD=0.7

# Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365
AUDIT_LOG_ENABLED=true